<UserControl x:Class="NationalFlagsQuiz.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Width="460" Height="240">
        <Border Margin="0" BorderBrush="#F09609" CornerRadius="10" Background="Black" BorderThickness="6" Height="240">
            <Grid Margin="{StaticResource PhoneMargin}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"  Grid.Column="0" Text="by "/>
                <TextBlock FontSize="{StaticResource PhoneFontSizeSmall}" Grid.Row="0" Grid.Column="1" Text=" Neil Sainsbury" FontFamily="Fonts/AgentOrange.ttf#Agent Orange" Foreground="#F09609" />

                <TextBlock Grid.Row="1"  Grid.Column="0" Text="version "/>
                <TextBlock FontSize="{StaticResource PhoneFontSizeSmall}" Grid.Row="1"  Grid.Column="1" Text=" 1.0.0.0" FontFamily="Fonts/AgentOrange.ttf#Agent Orange" Foreground="#F09609" />

                <TextBlock Grid.Row="2"  Grid.Column="0" Text="support "/>
                <HyperlinkButton FontSize="{StaticResource PhoneFontSizeSmall}" Grid.Row="2"  Grid.Column="1" HorizontalAlignment="Left" Content="@eZainny (twitter)" NavigateUri="https://twitter.com/#!/eZainny" FontFamily="Fonts/AgentOrange.ttf#Agent Orange" Foreground="#1BA1E2" />

                <TextBlock Grid.Row="3"  Grid.Column="0" Text="web " />
                <HyperlinkButton FontSize="{StaticResource PhoneFontSizeSmall}" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Content="www.earthtoneil.com" NavigateUri="http://www.earthtoneil.com" FontFamily="Fonts/AgentOrange.ttf#Agent Orange" Foreground="#1BA1E2" />
                
                <Button Margin="{StaticResource PhoneVerticalMargin}" Grid.Row="4" Grid.ColumnSpan="2" Content="Review this app!" Click="ReviewButton_Click" />
            </Grid>
           

